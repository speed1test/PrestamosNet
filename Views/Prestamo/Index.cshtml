@using Prestamos.Models
@{
    ViewData["Title"] = "Ver prestamos";
}
<h1>Lista de Prestamos</h1>
<p></p>
<a type="button" class="btn btn-secondary" asp-controller="Prestamo" asp-action="Crear">Crear</a>
<hr>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Fecha</th>
      <th scope="col">Monto</th>
      <th scope="col">Meses</th>
      <th scope="col">Cuota</th>
      <th scope="col">Acci√≥n</th>
    </tr>
  </thead>
  <tbody>
      @foreach (PrestamoModel item in ViewBag.prestamos)
      {
        <tr>
            <th scope="row">@item.idPrestamo</th>
            <td>@item.fechaPrestamo</td>
            <td>@(((decimal)item.montoPrestamo).ToString("C2"))</td>
            <td>@item.mesesPrestamo.descripcionMes</td>
            <td>
                <a type="button" class="btn btn-primary" asp-controller="Prestamo" asp-action="ConsultarCuota" asp-route-idPrestamo="@item.idPrestamo">Consultar</a>
            </td>
            <td>
                <a type="button" class="btn btn-danger" asp-controller="Prestamo" asp-action="Eliminar" asp-route-idPrestamo="@item.idPrestamo">Eliminar</a>
            </td>
        </tr>
      }
  </tbody>
</table>