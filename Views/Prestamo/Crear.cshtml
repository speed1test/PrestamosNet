@using Prestamos.Models
@{
    ViewData["Title"] = "Crear nuevo prestamo";
}
@if(ViewBag.estado == 0){
    <div class="alert alert-success" role="alert">
        Lo Sentimos aun no cuenta con la edad para solicitar este producto.
    </div>
}
@if(ViewBag.estado == 1){
    <div class="alert alert-success" role="alert">
        Favor pasar por una de nuestras sucursales para evaluar su caso.
    </div>
}
<form asp-controller="Prestamo" asp-action="Crear">
<h1>Crea un nuevo Prestamo</h1>
<hr>
<strong><p>Fecha</p></strong>
<input type="date" name="fecha" value="" required>
<p></p>
<strong><p>Monto Prestamo</p></strong>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text">$</span>
    </div>
    <input type="number" class="form-control" name="monto" aria-label="Amount (to the nearest dollar)" pattern="[0-9]+([\.,][0-9]{2}+)" step="0.01" placeholder="Ejemplo: 123.45" required>
</div>
<p></p>
<strong><p>Meses prestamo</p></strong>
<div class="form-group">
    <select class="form-control" id="exampleFormControlSelect1" name="meses" required>
        @foreach (MesModel item in ViewBag.meses)
        {
            <option value="@item.idMes">@item.descripcionMes</option>
        }
    </select>
</div>
<p></p>
<button type="submit" class="btn btn-primary">Guardar</button>
</form>